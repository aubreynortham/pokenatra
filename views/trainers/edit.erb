<div class='containareon'>


<form action="/trainers/<%= @trainer.id %>" method="post">
  <input type="hidden" name="_method" value="put">

  <label>Name: </label>
  <input type="text" name="trainer[name]" value="<%= @trainer.name %>"><br>

  <label>Level: </label>
  <input type="text" name="trainer[level]" value="<%= @trainer.level %>"><br>

  <label>Image: </label>
  <input type="text" name="trainer[img_url]" value="<%= @trainer.img_url %>"><br>

  <input type="submit" value="Update the Trainer!">
</form>


<h4>Delete Trainer</h4>
<form action="/trainers/<%= @trainer.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="DELETE">
</form>

</div>
